<div class="products">
	<div class="container">
		<div class="single-page">
			<div class="single-page-row" id="detail-21">
				<div class="col-md-6 single-top-left">
					<div class="flexslider">
						<ul class="slides">
							<li data-thumb="/images/s1.jpg">
								<div class="thumb-image detail_images"> <img src="{{productFound.imgSrc}}"
										data-imagezoom="true" class="img-responsive" alt=""> </div>
							</li>
					</div>
				</div>
				<div class="col-md-6 single-top-right">
					<h3 class="item_name">{{productFound.ten}}</h3>
					<p>Thời gian xử lý: Hàng sẽ được xuất xưởng trong vòng 2-3 ngày làm việc. </p>
					<div class="single-rating">
						<ul>
							<li><i class="fa fa-star-o" aria-hidden="true"></i></li>
							<li><i class="fa fa-star-o" aria-hidden="true"></i></li>
							<li><i class="fa fa-star-o" aria-hidden="true"></i></li>
							<li><i class="fa fa-star-o" aria-hidden="true"></i></li>
							<li><i class="fa fa-star-o" aria-hidden="true"></i></li>
							<li class="rating">20 dánh giá</li>
							<li><a href="">Thêm đánh giá của bạn</a></li>
						</ul>
					</div>
					<div class="single-price">
						<div id="result"></div>
						<ul>
							<li>{{productFound.gia}}</li>
							<li><span class="w3off">Giảm 10% </span></li>
							<li>Kết thúc vào ngày: 15/10</li>
							<li><a href=""><i class="fa fa-gift" aria-hidden="true"></i> Phiếu giảm giá</a></li>
						</ul>
					</div>
					<p class="single-price-text">Sản phẩm tốt, rất tốt, tuyệt vời</p>
					{{#if user}}
					<div class="key1">
						<i class="fas fa-sort-numeric-up" aria-hidden="true"></i>
						<input type="number" name="soluong" id="soluong" required="" min="1" value="1">
						<div class="clearfix"></div>
					</div>
					<input type="text" name="imgSrc" id="imgSrc" value="{{productFound.imgSrc}}" hidden=true>
					<input type="text" name="email" id="email" value="{{user.email}}" hidden=true>
					<input type="text" name="ten" id="ten" value="{{productFound.ten}}" hidden=true>
					<input type="text" name="gia" id="gia" value="{{productFound.gia}}" hidden=true>
					<input type="text" name="_id" id="_id" value="{{user._id}}" hidden=true>
					<input type="text" name="idsanpham" id="idsanpham" value="{{productFound._id}}" hidden=true>
					<button type="submit" class="w3ls-cart" id="submit"><i class="fa fa-cart-plus"
							aria-hidden="true"></i> Thêm
						vào giỏ hàng</button>
					<button class="w3ls-cart w3ls-cart-like"><i class="fa fa-heart-o" aria-hidden="true"></i> Thêm vào
						danh sách yêu thích </button>
					{{/if}}
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>

		<!-- collapse-tabs -->
		<div class="collpse tabs">
			<h3 class="w3ls-title">Thông tin về sản phẩm</h3>
			<div class="panel-group collpse" id="accordion" role="tablist" aria-multiselectable="true">
				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingOne">
						<h4 class="panel-title">
							<a class="pa_italic" role="button" data-toggle="collapse" data-parent="#accordion"
								href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
								<i class="fa fa-file-text-o fa-icon" aria-hidden="true"></i> Mô tả <span
									class="fa fa-angle-down fa-arrow" aria-hidden="true"></span> <i
									class="fa fa-angle-up fa-arrow" aria-hidden="true"></i>
							</a>
						</h4>
					</div>
					<div id="collapseOne" class="panel-collapse collapse in" role="tabpanel"
						aria-labelledby="headingOne">
						<div class="panel-body">
							{{productFound.mota}}
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingTwo">
						<h4 class="panel-title">
							<a class="collapsed pa_italic" role="button" data-toggle="collapse" data-parent="#accordion"
								href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
								<i class="fa fa-info-circle fa-icon" aria-hidden="true"></i> Thông tin thêm <span
									class="fa fa-angle-down fa-arrow" aria-hidden="true"></span> <i
									class="fa fa-angle-up fa-arrow" aria-hidden="true"></i>
							</a>
						</h4>
					</div>
					<div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
						<div class="panel-body">
							{{productFound.info}}
						</div>
					</div>
				</div>
				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingFour">
						<h4 class="panel-title">
							<a class="collapsed pa_italic" role="button" data-toggle="collapse" data-parent="#accordion"
								href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
								<i class="fa fa-question-circle fa-icon" aria-hidden="true"></i> Giúp đỡ <span
									class="fa fa-angle-down fa-arrow" aria-hidden="true"></span> <i
									class="fa fa-angle-up fa-arrow" aria-hidden="true"></i>
							</a>
						</h4>
					</div>
					<div id="collapseFour" class="panel-collapse collapse" role="tabpanel"
						aria-labelledby="headingFour">
						<div class="panel-body">
							{{productFound.help}}
						</div>
					</div>
				</div>
			</div>

		</div>
		<div class="panel panel-default">
			<div class="but_list">
				<div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
					<ul id="myTab" class="nav nav-tabs" role="tablist">
						<li role="presentation" class="active">
							<a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile"
								aria-expanded="true">Xem đánh giá</a>
						</li>
					</ul>
					<div id="myTabContent" class="tab-content">
						<div role="tabpanel" class="tab-pane fade in active" id="addnewComment" aria-labelledby="profile-tab">
							{{#each productFound.comments}}
							<div>
								<p><strong>{{this.tenNguoiDanhgia}}</strong>:{{this.comment}}</p>
							</div>
							{{/each}}
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
	<div class="clearfix"></div>
	<div class="container">
		<h3 class="w3ls-title1">Đánh giá</h3>
		<div class="col-md-12 col-sm-12 customtextar">
			{{#if user}}
			<textarea class="textarea1" name="comment" id="comment" placeholder="Thêm đánh giá ở đây...."></textarea>
			<input type="submit" id="commentButton" value="Gửi Đánh giá" class="btn2 btn-outline-secondary">
			{{/if}}
			<input type="text" value="{{productFound._id}}" id="btnCmt" hidden=true>
			<input type="text" value="{{user.name}}" id="btnten" hidden=true>
			<!-- //collapse -->
		</div>
	</div>
</div>
</div>
<script>
	$('#submit').click((e) => {
		e.preventDefault();
		console.log('click');
		var data = {};
		data.ten = $('#ten').val();
		data.gia = $('#gia').val();
		data.imgSrc = $('#imgSrc').val();
		data.idsanpham = $('#idsanpham').val();
		data.tongtien = 1;
		data.soluong = $('#soluong').val();;
		data.tongsoluong = 1;
		data.email = $('#email').val();
		data._id = $('#_id').val();
		$.ajax({
			url: "/API/product/addtocart",
			type: "post",
			dataType: "json",
			data: (data),
			success: function (text) {
				console.log((text));
				$('#result').addClass('alert alert-success')
				$('#result').html(text);

			}
		})
	})
</script>
<script>
	$('#commentButton').click(() => {
		var data1 = {}
		data1.id = $('#btnCmt').val();
		data1.nguoidanhgia = $('#btnten').val();
		data1.comment = $('#comment').val();
		$.ajax({
			url: "/API/product/addComment",
			type: "post",
			dataType: "json",
			data: (data1),
			success: function (text) {
				var source = $('#addnewComment');
				source.empty();
				$.each(text.comments, function (i, database) {
					source.append('<div><p><strong>' + database.tenNguoiDanhgia + '</strong>:' + database.comment + '</p></div>')
				})
				$('#comment').val('');
			}
		})
	})
</script>